<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bus.ticket.dao.BusLineDriverUserDao">

    <resultMap type="com.bus.ticket.entity.BusLineDriverUser" id="BusLineDriverUserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="busLineId" column="bus_line_id" jdbcType="INTEGER"/>
        <result property="creationTime" column="creation_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BusLineDriverUserMap">
        select id,
               user_id,
               bus_line_id,
               creation_time
        from bus_line_driver_user
        where id = #{id}
    </select>

    <select id="queryAll" resultMap="BusLineDriverUserMap"
            parameterType="com.bus.ticket.model.query.BusLineDriverUserPageQuery">
        select
        id, user_id, bus_line_id, creation_time
        from bus_line_driver_user
        <include refid="where_query"/>
        <if test="orderBy != null and orderType != null">
            order by ${orderBy} ${orderType}
        </if>
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BusLineDriverUserMap"
            parameterType="com.bus.ticket.model.query.BusLineDriverUserPageQuery">
        select
        id, user_id, bus_line_id, creation_time
        from bus_line_driver_user
        <include refid="where_query"/>
        <if test="orderBy != null and orderType != null">
            order by ${orderBy} ${orderType}
        </if>
        limit #{startIndex}, #{endIndex}
    </select>

    <sql id="where_query">
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="busLineId != null">
                and bus_line_id = #{busLineId}
            </if>
            <if test="creationTime != null">
                and creation_time = #{creationTime}
            </if>
        </where>
    </sql>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Integer"
            parameterType="com.bus.ticket.model.query.BusLineDriverUserPageQuery">
        select count(1) from bus_line_driver_user
        <include refid="where_query"/>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into bus_line_driver_user(user_id, bus_line_id, creation_time)
        values (#{userId}, #{busLineId}, #{creationTime})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into bus_line_driver_user(user_id, bus_line_id, creation_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userId}, #{entity.busLineId}, #{entity.creationTime})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into bus_line_driver_user(user_id, bus_line_id, creation_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userId}, #{entity.busLineId}, #{entity.creationTime})
        </foreach>
        on duplicate key update
        user_id = values(user_id),
        bus_line_id = values(bus_line_id),
        creation_time = values(creation_time)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update bus_line_driver_user
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="busLineId != null">
                bus_line_id = #{busLineId},
            </if>
            <if test="creationTime != null">
                creation_time = #{creationTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from bus_line_driver_user
        where id = #{id}
    </delete>

</mapper>

